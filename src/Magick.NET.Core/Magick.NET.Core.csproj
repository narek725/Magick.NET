<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <PropertyGroup>
    <TargetFrameworks>net20;net40;netstandard13;netstandard20</TargetFrameworks>
    <Platforms>AnyCPU</Platforms>
    <Configurations>Debug;Test;Release</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.164" PrivateAssets="All" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard13'">
    <PackageReference Include="System.Xml.XPath.XmlDocument" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="../Magick.NET.Shared/Throw.cs" Link="Helpers/Throw.cs" />
    <Compile Include="../Magick.NET.Shared/ValidatedNotNullAttribute.cs" Link="Helpers/ValidatedNotNullAttribute.cs" />
    <Compile Include="../Magick.NET.Shared/Netstandard/Netstandard13/FileHelper.cs" Link="Frameworks/Netstandard/Netstandard13/FileHelper.cs" />
    <Compile Include="../Magick.NET.Shared/Netstandard/Netstandard13/MemoryStreamExtensions.cs" Link="Frameworks/Netstandard/Netstandard13/MemoryStreamExtensions.cs" />
    <Compile Include="../Magick.NET.Shared/Netstandard/Netstandard13/TypeHelper.cs" Link="Frameworks/Netstandard/Netstandard13/TypeHelper.cs" />
    <Compile Include="../Magick.NET.Shared/Bytes.cs" Link="Helpers/Bytes.cs" />
    <Compile Include="../Magick.NET.Shared/EnumHelper.cs" Link="Helpers/EnumHelper.cs" />
    <Compile Include="../Magick.NET.Shared/FileHelper.cs" Link="Helpers/FileHelper.cs" />
    <Compile Include="../Magick.NET.Shared/TypeHelper.cs" Link="Helpers/TypeHelper.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources/**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources/ColorProfiles/CMYK/CoatedFOGRA39.icc">
      <LogicalName>ImageMagick.Resources.ColorProfiles.CMYK.CoatedFOGRA39.icc</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources/ColorProfiles/CMYK/USWebCoatedSWOP.icc">
      <LogicalName>ImageMagick.Resources.ColorProfiles.CMYK.USWebCoatedSWOP.icc</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources/ColorProfiles/RGB/AdobeRGB1998.icc">
      <LogicalName>ImageMagick.Resources.ColorProfiles.RGB.AdobeRGB1998.icc</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources/ColorProfiles/RGB/AppleRGB.icc">
      <LogicalName>ImageMagick.Resources.ColorProfiles.RGB.AppleRGB.icc</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources/ColorProfiles/RGB/ColorMatchRGB.icc">
      <LogicalName>ImageMagick.Resources.ColorProfiles.RGB.ColorMatchRGB.icc</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources/ColorProfiles/RGB/SRGB.icm">
      <LogicalName>ImageMagick.Resources.ColorProfiles.RGB.SRGB.icm</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <Import Project="../Magick.NET.props" />
</Project>